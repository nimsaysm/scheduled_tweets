<h1>Sign In</h1>


<%= form_with url:sign_in_path, data: { turbo: false }, local: true  do |form| %>
<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Input your email" %>
</div>
<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Input your password" %>
</div>

<div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary" %>
</div>

<div class="mb-3">
    <%= link_to "Forgot your password?", password_reset_path %>
</div>
<% end %>